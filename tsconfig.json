{
  "include": ["src/**/*", "./index.ts"],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": false,
    "target": "ES6",
    "stripInternal": true,
    "typeRoots": ["./types"],
    "lib": ["es2018", "dom", "esnext"]
  }
}
