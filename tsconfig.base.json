{
  "include": ["src/**/*", "types/**/*"],
  "compilerOptions": {
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "stripInternal": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./types"],
    "lib": ["es2018", "dom", "esnext"]
  }
}
